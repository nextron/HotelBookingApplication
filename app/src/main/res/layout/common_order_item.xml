<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardViewOrder"
    android:layout_width="match_parent"
    android:layout_height="135dp"
    android:outlineSpotShadowColor="#FF0000"
    app:cardCornerRadius="15dp"
    app:cardElevation="2dp"
    app:cardMaxElevation="2dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/orderItemHotelName"
            android:layout_width="180dp"
            android:layout_height="20dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Hotel Name"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/orderItemCheckIn"
            android:layout_width="170dp"
            android:layout_height="20dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:text="CheckIn"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/orderItemHotelName" />

        <TextView
            android:id="@+id/orderItemCheckOut"
            android:layout_width="170dp"
            android:layout_height="20dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:text="CheckOut"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/orderItemCheckIn" />

        <TextView
            android:id="@+id/orderItemRooms"
            android:layout_width="170dp"
            android:layout_height="20dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Rooms"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@+id/orderItemHotelName"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/orderItemGuests"
            android:layout_width="170dp"
            android:layout_height="20dp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="12dp"
            android:text="Guests"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@+id/orderItemCheckIn"
            app:layout_constraintTop_toBottomOf="@+id/orderItemRooms" />

        <TextView
            android:id="@+id/orderItemOrderStatus"
            android:layout_width="170dp"
            android:layout_height="20dp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="12dp"
            android:text="Order Stauts"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/orderItemCheckOut"
            app:layout_constraintTop_toBottomOf="@+id/orderItemGuests" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>