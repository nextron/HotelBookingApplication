<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="15dp"
    app:cardElevation="2dp"
    app:cardMaxElevation="2dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/customer_search_item"
        >

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgSearchItemImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="5dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/roundImage"
            app:srcCompat="@drawable/ic_baseline_home_24" />

        <TextView
            android:id="@+id/txvSearchItemHotelName"
            android:layout_width="249dp"
            android:layout_height="27dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="19dp"
            android:text="Hotel Name"
            android:textColor="#1B1A1A"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgSearchItemImage" />

        <TextView
            android:id="@+id/txvSearchItemHotelCharges"
            android:layout_width="100dp"
            android:layout_height="23dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="23dp"
            android:text="Charges"
            app:layout_constraintStart_toEndOf="@+id/txvSearchItemHotelName"
            app:layout_constraintTop_toBottomOf="@+id/imgSearchItemImage" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="205dp"
            android:layout_height="22dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="6dp"
            android:text="Breakfast Included."
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txvSearchItemHotelName" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="315dp"
            android:layout_height="20dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="10dp"
            android:text="Free Cancellataion till 24 hours before checkIN"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView21" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>